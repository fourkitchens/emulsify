<div class="m-accordion-item" data-accordion-state='is-closed'>

  <a class="m-accordion-item__label" href="#" data-accordion-component="label">
    <div class="m-accordion-item__label-text">{{ accordion_label }}</div>
    <div class="m-accordion-item__label-icon">
      <svg class="svg__core m-accordion-item__svg--expand"><use xlink:href="{{ base_path ~ directory }}/svg/sprite-ui.svg#circle-arrow-down"></use></svg>
      <svg class="svg__core m-accordion-item__svg--collapse"><use xlink:href="{{ base_path ~ directory }}/svg/sprite-ui.svg#circle-arrow-up"></use></svg>
    </div>
  </a>

  <div class="m-accordion-item__content" data-accordion-component="content">
    <p>{{ accordion_content }}</p>
  </div>
</div>

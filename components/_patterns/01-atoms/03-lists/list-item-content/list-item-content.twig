{#
/**
 * Available variables:
 * - list_item_content_base_class - the base classname
 * - list_item_content_modifiers - array of modifiers to add to the base classname
 * - list_item_content_blockname - blockname prepended to the base classname
 * - list_item_content - the content of the list_item (typically text)
 */
#}
{% set list_item_content_base_class_var = list_item_content_base_class|default('list-item-content') %}

<span class="{{ list_item_content_base_class_var }}{% for modifier in list_item_content_modifiers %} {{ list_item_content_base_class_var }}--{{ modifier }}{% endfor %}{% if list_item_content_blockname %} {{ list_item_content_blockname }}__{{ list_item_content_base_class_var }}{% endif %}">

  {{ list_item_content }}

</span>

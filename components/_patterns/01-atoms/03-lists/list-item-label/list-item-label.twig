{#
/**
 * Available variables:
 * - list_item_label_base_class - the base classname
 * - list_item_label_modifiers - array of modifiers to add to the base classname
 * - list_item_label_blockname - blockname prepended to the base classname
 * - list_item_label - the label to be displayed (typically text)
 */
#}
{% set list_item_label_base_class_var = list_item_label_base_class|default('list-item-label') %}

<span class="{{ list_item_label_base_class_var }}{% for modifier in list_item_label_modifiers %} {{ list_item_label_base_class_var }}--{{ modifier }}{% endfor %}{% if list_item_label_blockname %} {{ list_item_label_blockname }}__{{ list_item_label_base_class_var }}{% endif %}">

  {{ list_item_label }}

</span>

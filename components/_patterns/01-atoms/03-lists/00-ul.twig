{#
/**
 * Available variables:
 * - ul_base_class - the base classname
 * - ul_modifiers - array of modifiers to add to the base classname
 * - ul_blockname - blockname prepended to the base classname
 * - ul_attributes - array of attribute,value pairs
 *   - class - if classes are passed, they must be as an array, like
 *             ul_attributes: {'class': ['foo'], 'role':'navigation', 'rel':'nofollow'}
 *
 * - listItems - TBD
 */
#}
{% set ul_base_class = ul_base_class|default('ul') %}
{% set ul_attributes = ul_attributes|default({class: []}) %}
{% set ul_bem = bem(ul_base_class, (ul_modifiers), ul_blockname) %}

{# Merge bem-generated class with any existing attributes that are passed in. #}
{% set merged_attributes = ul_attributes|merge({class: ul_attributes.class|merge([ul_bem])}) %}

<ul {{ add_attributes(merged_attributes) }}>
  {% block list_content %}
    {% for ul_item in ul_items %}
      {% include "@atoms/03-lists/_list-item.twig" with {
        "list_item_label": ul_item.label,
        "list_item_content": ul_item.content,
        "li_base_class": ul_item.li_base_class,
        "li_base_class": ul_item.li_base_class,
        "li_modifiers": ul_item.li_modifiers,
        "li_blockname": ul_item.li_blockname,
      } %}
    {% endfor %}
  {% endblock %}
</ul>

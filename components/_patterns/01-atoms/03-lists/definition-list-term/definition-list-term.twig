{#
/**
 * Available variables:
 * - definition_list_term_base_class - the base classname
 * - definition_list_term_modifiers - array of modifiers to add to the base classname
 * - definition_list_term_blockname - blockname prepended to the base classname
 * - definition_list_term - the term of the definition list (typically text)
 */
#}
{% set definition_list_term_base_class_var = definition_list_term_base_class|default('definition-list-term') %}

<dt class="{{ definition_list_term_base_class_var }}{% for modifier in definition_list_term_modifiers %} {{ definition_list_term_base_class_var }}--{{ modifier }}{% endfor %}{% if definition_list_term_blockname %} {{ definition_list_term_blockname }}__{{ definition_list_term_base_class_var }}{% endif %}">

  {{ definition_list_term }}

</dt>

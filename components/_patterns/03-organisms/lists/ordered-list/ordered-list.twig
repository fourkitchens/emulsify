{#
/**
 * Available variables:
 * - ordered_list_base_class - the base classname
 * - ordered_list_modifiers - array of modifiers to add to the base classname
 * - ordered_list_blockname - blockname prepended to the base classname
 * - ordered_list_items - an array of list items
 */
#}
{% set ordered_list_base_class_var = ordered_list_base_class|default('list-ol') %}

<ol class="{{ ordered_list_base_class_var }}{% for modifier in ordered_list_modifiers %} {{ ordered_list_base_class_var }}--{{ modifier }}{% endfor %}{% if ordered_list_blockname %} {{ ordered_list_blockname }}__{{ ordered_list_base_class_var }}{% endif %}">

  {% for ordered_list_item in ordered_list_items %}
    {% include "@molecules/lists/list-item/list-item.twig"
      with {
        "list_item_modifiers": ordered_list_item.modifiers,
        "list_item_label": ordered_list_item.label,
        "list_item_content": ordered_list_item.content,
      }
    %}
  {% endfor %}

</ol>

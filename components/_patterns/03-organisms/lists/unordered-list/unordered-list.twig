{#
/**
 * Available variables:
 * - unordered_list_base_class - the base classname
 * - unordered_list_modifiers - array of modifiers to add to the base classname
 * - unordered_list_blockname - blockname prepended to the base classname
 * - unordered_list_items - an array of list items
 */
#}
{% set unordered_list_base_class_var = unordered_list_base_class|default('list-ul') %}

<ul class="{{ unordered_list_base_class_var }}{% for modifier in unordered_list_modifiers %} {{ unordered_list_base_class_var }}--{{ modifier }}{% endfor %}{% if unordered_list_blockname %} {{ unordered_list_blockname }}__{{ unordered_list_base_class_var }}{% endif %}">
  {% for unordered_list_item in unordered_list_items %}
    {% include "@molecules/lists/list-item/list-item.twig"
      with {
        "list_item_modifiers": unordered_list_item.modifiers,
        "list_item_label": unordered_list_item.label,
        "list_item_content": unordered_list_item.content,
      }
    %}
  {% endfor %}
</ul>
